#!/usr/bin/env groovy
pipeline {
    agent any
    environment {
        AWS_ACCESS_KEY_ID     = credentials('AWS_ACCESS_KEY_ID')
        AWS_SECRET_ACCESS_KEY = credentials('AWS_SECRET_ACCESS_KEY')
        AWS_DEFAULT_REGION    = "us-east-1"
        // Define a temporary profile name for this pipeline run
        AWS_PROFILE           = "jenkins_pipeline_profile"
        KUBECONFIG            = "${WORKSPACE}/kubeconfig"
    }
    stages {
        stage("Create an EKS Cluster") {
            steps {
                script {
                    dir('projects/deployK8Application/eks') {
                        sh 'terraform init'
                        sh 'terraform plan'
                        sh 'terraform apply -auto-approve'
                    }
                }
            }
        }

        stage("Deploy to EKS") {
            steps {
                script {
                    dir('projects/deployK8Application/kubernetes') {
                        sh '''
                            echo "=== Checking tool versions ==="
                            aws --version
                            kubectl version --client

                            # Configure a temporary AWS profile using the environment variables
                            mkdir -p ~/.aws
                            cat > ~/.aws/credentials << EOF
[$AWS_PROFILE]
aws_access_key_id = $AWS_ACCESS_KEY_ID
aws_secret_access_key = $AWS_SECRET_ACCESS_KEY
region = $AWS_DEFAULT_REGION
EOF

                            echo "=== Configuring kubeconfig to ${KUBECONFIG} using profile $AWS_PROFILE ==="
                            # Use the temporary profile for update-kubeconfig
                            aws eks update-kubeconfig \
                                --name jenkins-eks-cluster \
                                --region $AWS_DEFAULT_REGION \
                                --kubeconfig $KUBECONFIG \
                                --profile $AWS_PROFILE

                            echo "=== Verifying kubeconfig file exists and its permissions ==="
                            ls -la $KUBECONFIG
                            # Check the cluster endpoint and auth mechanism
                            echo "=== Cluster Info from kubeconfig ==="
                            grep -A2 "server:" $KUBECONFIG
                            echo "=== Auth Provider/Exec Info (should include profile $AWS_PROFILE) ==="
                            grep -A10 "exec:" $KUBECONFIG

                            echo "=== Attempting to get cluster info using kubectl ==="
                            # This command tests authentication
                            kubectl cluster-info

                            echo "=== Deploying Nginx ==="
                            kubectl apply -f nginx-deployment.yaml

                            kubectl delete service nginx --ignore-not-found
                            kubectl apply -f nginx-service.yaml

                            echo "=== Done. LB will be ready in 2-5 minutes ==="
                        '''
                    }
                }
            }
        }
    }
}
pipeline {
    agent any
    environment {
        AWS_ACCESS_KEY_ID     = credentials('AWS_ACCESS_KEY_ID')
        AWS_SECRET_ACCESS_KEY = credentials('AWS_SECRET_ACCESS_KEY')
        AWS_DEFAULT_REGION    = "us-east-1"
        KUBECONFIG            = "${WORKSPACE}/kubeconfig"
    }
    stages {
        stage("Create or Update EKS Cluster") {
            steps {
                dir('projects/deployK8Application/eks') {
                    sh '''
                        # Ensure Terraform uses latest config
                        terraform init -reconfigure
                        terraform plan
                        terraform apply -auto-approve
                    '''
                }
            }
        }

        stage("Generate Fresh Kubeconfig") {
            steps {
                dir('projects/deployK8Application/kubernetes') {
                    sh '''
                        echo "=== Generating fresh kubeconfig ==="
                        rm -f $KUBECONFIG
                        aws eks update-kubeconfig \
                            --name jenkins-eks-cluster \
                            --region $AWS_DEFAULT_REGION \
                            --kubeconfig $KUBECONFIG \
                            --alias jenkins-eks

                        echo "=== Verify cluster access ==="
                        kubectl get nodes --kubeconfig $KUBECONFIG
                    '''
                }
            }
        }

        stage("Deploy Nginx to EKS") {
            steps {
                dir('projects/deployK8Application/kubernetes') {
                    sh '''
                        echo "=== Deploying Nginx ==="
                        kubectl apply -f nginx-deployment.yaml --kubeconfig $KUBECONFIG
                        kubectl delete service nginx --ignore-not-found --kubeconfig $KUBECONFIG
                        kubectl apply -f nginx-service.yaml --kubeconfig $KUBECONFIG
                        echo "=== Deployment complete. LB will be ready in 2-5 minutes ==="
                    '''
                }
            }
        }
    }
}

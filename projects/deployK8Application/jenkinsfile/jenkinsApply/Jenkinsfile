pipeline {
    agent any
    environment {
        AWS_ACCESS_KEY_ID     = credentials('AWS_ACCESS_KEY_ID')
        AWS_SECRET_ACCESS_KEY = credentials('AWS_SECRET_ACCESS_KEY')
        AWS_DEFAULT_REGION    = "us-east-1"
        KUBECONFIG            = "${WORKSPACE}/kubeconfig"
    }
    stages {
        stage("Create an EKS Cluster") {
            steps {
                dir('projects/deployK8Application/eks') {
                    sh '''
                        export PATH=/usr/local/bin:$PATH
                        export AWS_ACCESS_KEY_ID=$AWS_ACCESS_KEY_ID
                        export AWS_SECRET_ACCESS_KEY=$AWS_SECRET_ACCESS_KEY
                        export AWS_DEFAULT_REGION=$AWS_DEFAULT_REGION

                        echo "=== Terraform Init ==="
                        terraform init
                        echo "=== Terraform Plan ==="
                        terraform plan
                        echo "=== Terraform Apply ==="
                        terraform apply -auto-approve
                    '''
                }
            }
        }
        stage("Deploy to EKS") {
            steps {
                dir('projects/deployK8Application/kubernetes') {
                    sh '''
                        export PATH=/usr/local/bin:$PATH
                        export AWS_ACCESS_KEY_ID=$AWS_ACCESS_KEY_ID
                        export AWS_SECRET_ACCESS_KEY=$AWS_SECRET_ACCESS_KEY
                        export AWS_DEFAULT_REGION=$AWS_DEFAULT_REGION
                        export KUBECONFIG=$KUBECONFIG

                        echo "=== AWS CLI Version ==="
                        aws --version
                        echo "=== Kubectl Version ==="
                        kubectl version --client

                        echo "=== Update Kubeconfig ==="
                        aws eks update-kubeconfig --name jenkins-eks-cluster --region $AWS_DEFAULT_REGION --kubeconfig $KUBECONFIG

                        echo "=== Deploy Nginx ==="
                        kubectl apply -f nginx-deployment.yaml --kubeconfig $KUBECONFIG
                        kubectl delete service nginx --ignore-not-found --kubeconfig $KUBECONFIG
                        kubectl apply -f nginx-service.yaml --kubeconfig $KUBECONFIG

                        echo "=== Deployment Complete. LB will be ready in 2-5 minutes ==="
                    '''
                }
            }
        }
    }
}